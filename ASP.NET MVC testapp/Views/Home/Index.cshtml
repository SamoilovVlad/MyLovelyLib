@model List<Event>
@{
    ViewData["Title"] = "Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-4">
    <div class="jumbotron">
        <h1>Welcome to the Library</h1>
        <p>Explore our vast collection of books</p>
        <a class="btn btn-primary btn-lg" asp-controller="Books" asp-action="IndexLib">Browse Books</a>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary btn-lg" asp-controller="Event" asp-action="CreateEvent">Create Event</a>
        }
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Upcoming Events</h2>
            <div class="card-deck">
                @Html.Partial("ShowEventList", Model)
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>About Us</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ut felis at magna sagittis dapibus. Curabitur eget quam mauris.</p>
            <p>In our library, we strive to provide a diverse range of books covering various genres and subjects. Our collection includes both fiction and non-fiction books, catering to readers of all ages and interests.</p>
            <p>Whether you are looking for a thrilling novel, a thought-provoking essay, or educational material, our library has something for everyone. Visit us today to embark on a literary journey.</p>
        </div>
        <div class="col-md-6">
            <h2>Contact Us</h2>
            <p>123 Library Street, City, Country</p>
            <p>Email: info@library.com</p>
            <p>Phone: +1 123-456-7890</p>
            <p>Opening Hours: Monday to Friday, 9:00 AM - 6:00 PM</p>
        </div>
    </div>
</div>

