@{
    ViewData["Title"] = "Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IndexViewModel
<h1 class="text-md-center pt-4 pb-3">MY BOOKS</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <a class="card1" href="@Url.Action("ShowList", "MyBooks", new { num = 1 })">
                <h3>Books I've Read</h3>
                <div class="table">
                    @{
                        int i = 0;
                        if (Model.alreadyRead.Count > 0 && i < 5)
                        {
                            <div class="row">
                                <h5 class="col">Title</h5>
                                <h5 class="col">Author</h5>
                                <h5 class="col">Year</h5>
                            </div>
                            foreach (var book in Model.alreadyRead)
                            {
                                <div class="row">
                                    <p class="col">@book.Title</p>
                                    <p class="col">@book.AuthorName @book.AuthorSurname</p>
                                    <p class="col">@book.ReleaseDate</p>
                                </div>
                                i++;
                            }
                        }
                        else
                        {
                            <div class="row">
                                <h5 class="col"></h5>
                                <h5 class="col"></h5>
                                <h5 class="col"></h5>
                            </div>
                            for (int j = 0; j < 5; j++)
                            {
                                <div class="row">
                                    <p class="col"></p>
                                    <p class="col"></p>
                                    <p class="col"></p>
                                </div>
                            }
                        }
                    }
                </div>
                <div class="go-corner" href="@Url.Action("ShowList", "MyBooks", new { num = 1 })">
                    <div class="go-arrow">
                        →
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a class="card1" href="@Url.Action("ShowList", "MyBooks", new { num = 2 })">
